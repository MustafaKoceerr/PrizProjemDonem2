<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragmentmain.LoginFragment">

    <TextView
        android:id="@+id/textPriz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="AKILLI PRIZ"
        android:fontFamily="@font/alienenergy"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textColor="@color/dark_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="@font/thebomb"
        android:text="Hesabina giris yap"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/linearLayout"
        app:layout_constraintEnd_toEndOf="@id/textPriz"
        app:layout_constraintStart_toStartOf="@id/textPriz"
        app:layout_constraintTop_toBottomOf="@id/textPriz"
        />


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/textView"
            app:layout_constraintStart_toStartOf="@id/textView"
            app:layout_constraintTop_toBottomOf="@id/textView"
            android:layout_margin="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/txtUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/custom_username_icon"
                android:drawablePadding="12dp"
                android:hint="Kullanıcı Adı"
                android:minHeight="48dp"
                android:background="@drawable/custom_edit_text"
                />

            <EditText
                android:id="@+id/txtPasswd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableStart="@drawable/custom_password_icon"
                android:drawablePadding="12dp"
                android:hint="Parola"
                android:inputType="textPassword"
                android:background="@drawable/custom_edit_text"
                android:minHeight="48dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal"
                android:padding="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button"
                    android:text="GIRIS YAP"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_text_size" />


                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/custom_button_second"
                    android:text="UYE OL"
                    android:textColor="@color/white"
                    android:textSize="@dimen/button_text_size" />


            </LinearLayout>
        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>